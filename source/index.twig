---
layout: default
title: Home
generator: pagination
pagination:
max_per_page: 3
use:
- posts
---
{% for post in page.pagination.items %}
  <article class="paginated">
    <header>
      <h2><a href="{{ site.url }}{{ post.url }}">{{ post.title }}</a></h2>

      <p class="meta">
        <time datetime="{{ post.date|date('c') }}" >
          <span class='month'>{{ post.date|date('M') }}</span>
          <span class='day'>{{ post.date|date('jS') }}</span>
          <span class='year'>{{ post.date|date('Y') }}</span>
        </time>
        |
        <a href="{{ post.url }}/#disqus_thread" data-disqus-identifier="{{ site.disqus_url }}{{ post.url }}/">Comments</a>
      </p>
      {% if post.meta.tags %}
      <p class="tags">
        {% for tag in post.meta.tags %}
          <a class="tag-color tag-color-{{ loop.index }}" href="{{ site.url }}/blog/tags/{{ tag|url_encode(true) }}">{{ tag }}</a>{% if not loop.last %} {% endif %}
        {% endfor %}
      </p>
    </header>
    <div class="post-content">
      {{ post.blocks.content|raw }}
    </div>
    {% endif %}
    <hr />
  </article>
{% endfor %}
{% if page.pagination.previous_page or page.pagination.next_page %}
  <nav>
    {% if page.pagination.previous_page %}
    <a href="{{ site.url }}{{ page.pagination.previous_page.url }}">Newer
      Posts</a>{% endif %}<br/>
    {% if page.pagination.next_page %}
    <a href="{{ site.url }}{{ page.pagination.next_page.url }}">Older
      Posts</a>{% endif %}<br/>
  </nav>
{% endif %}
